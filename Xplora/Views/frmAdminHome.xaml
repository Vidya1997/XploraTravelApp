<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xplora.Views.frmAdminHome"
             BackgroundImageSource="bg.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xplora Admin" FontSize="Large" FontAttributes="Bold" TextDecorations="Underline" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Grid VerticalOptions="CenterAndExpand" Padding="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" ></RowDefinition>
                </Grid.RowDefinitions>
            <Button x:Name="btnViewPlace" Text="Places" BackgroundColor="ForestGreen" BorderColor="Green" CornerRadius="500" BorderWidth="3" Clicked="OnbtnViewPlacesClicked" Grid.Column="0"/>
                <Button x:Name="btnAddPackage" Text="Packages" BackgroundColor="GreenYellow" BorderWidth="3" CornerRadius="500" BorderColor="Green" Clicked="OnbtnAddPackages" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>